{
  "name": "vite-plugin-checker",
  "version": "0.6.3",
  "description": "Vite plugin that runs TypeScript type checker on a separate process.",
  "type": "module",
  "types": "./dist/cjs/main.d.ts",
  "main": "./dist/cjs/main.js",
  "exports": {
    ".": {
      "types": "./dist/esm/main.d.ts",
      "import": "./dist/esm/main.js",
      "default": "./dist/cjs/main.js"
    },
    "./logger": {
      "types": "./dist/esm/logger.d.ts",
      "import": "./dist/esm/logger.js",
      "default": "./dist/cjs/logger.js"
    },
    "./types": {
      "types": "./dist/esm/types.d.ts",
      "import": "./dist/esm/types.js",
      "default": "./dist/cjs/types.js"
    },
    "./Checker": {
      "types": "./dist/esm/Checker.d.ts",
      "import": "./dist/esm/Checker.js",
      "default": "./dist/cjs/Checker.js"
    },
    "./FileDiagnosticManager": {
      "types": "./dist/esm/FileDiagnosticManager.d.ts",
      "import": "./dist/esm/FileDiagnosticManager.js",
      "default": "./dist/cjs/FileDiagnosticManager.js"
    }
  },
  "engines": {
    "node": ">=14.16"
  },
  "files": [
    "dist",
    "!dist/checkers/vueTsc/typescript-vue-tsc"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "build": "tsup && node ../../scripts/patchCjs.mjs",
    "build:test": "tsup --sourcemap inline"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fi3ework/vite-plugin-checker.git"
  },
  "keywords": [
    "vite",
    "vite-plugin",
    "typescript"
  ],
  "author": "fi3ework <fi3ework@gmail.com>",
  "license": "MIT",
  "bugs": "https://github.com/fi3ework/vite-plugin-checker/issues",
  "homepage": "https://github.com/fi3ework/vite-plugin-checker",
  "dependencies": {
    "@babel/code-frame": "^7.12.13",
    "ansi-escapes": "^4.3.0",
    "chalk": "^4.1.1",
    "npm-run-path": "^4.0.1",
    "semver": "^7.5.0",
    "strip-ansi": "^6.0.0",
    "tiny-invariant": "^1.3.1"
  },
  "peerDependencies": {
    "vite": ">=3.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/semver": "^7.3.13",
    "npm-run-all": "^4.1.5"
  }
}
